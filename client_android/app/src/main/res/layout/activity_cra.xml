<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/server_view_background"
    tools:context="cn.hisdar.cra.activitys.CRAActivity">


    <TextView
        android:id="@+id/message_view"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_gravity="left"
        android:background="#FFCCCCCC"
        android:gravity="center_vertical"
        android:text="@string/message_view_text"
        android:layout_marginBottom="10dp"
        android:paddingLeft="2dp"
        android:textColor="@color/message_view_text_color" />
    <ScrollView
        android:id="@+id/server_list_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1" >

        <LinearLayout
            android:id="@+id/server_list_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:orientation="vertical" >

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="3"
        android:gravity="bottom">

        <Button
            android:id="@+id/input_server_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/input_server_button_text" />

        <Button
            android:id="@+id/auto_serch_server_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:text="@string/auto_serch_server_button_text" />
    </LinearLayout>
</LinearLayout>